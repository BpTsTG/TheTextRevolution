<!doctype html>
<html>
<head>
	<title>Dokument | <%= page.title  %></title>
	<link rel="stylesheet" type="text/css" href="css/main.css" />
	<meta charset="utf-8" />
</head>
<body>
<div class="topbar bar">
	<div class="layout" >
		<button id="showcontainer">show container</button>
		<button id="test">Test</button>
	</div>

	<!--<div class="layout userlist"></div>-->
	
		<div class="layout">
			<button class="addcontainer">+</button>
		</div>
	
	<div class="layout">
		<button class="open">open</button>
	</div>

	<div class="layout userinfo">
		<input type="text" id="clientname"/>
		<button class="updatename">update</button>
	</div>

</div>
<div class="rightbar bar">
	<div class="layout">
		<span class="layoutname">Main container</span>
		<div class="layout">
			<span class="layoutname">Marge</span>
			<label for="dokstyle_padding">in</label><input type="number" id="dokstyle_padding"/><br />
			<label for="dokstyle_margin">out</label><input type="number"id="dokstyle_margin"/><br />
		</div>
		
		<div class="layout">
			<span class="layoutname">Background</span>
			
			<label for="dokstyle_backgroundcolor">color</label><input type="color" id="dokstyle_backgroundcolor"/><br />
			<label for="dokstyle_backgroundimage">image</label><input type="text" id="dokstyle_backgroundimage"/>
		</div>
		
		<div class="layout">
			<span class="layoutname">Font</span>
			
			<label for="dokstyle_fontsize">size</label><input type="number" id="dokstyle_fontsize"/><br />
			<label for="dokstyle_fontcolor">color</label><input type="color" id="dokstyle_fontcolor"/><br />
			<label for="dokstyle_fontfamily">family</label><input type="font" id="dokstyle_fontfamily"/><br />
			<label for="dokstyle_letterspacing">letter spacing</label><input type="text" id="dokstyle_letterspacing"/>
		</div>

		<div class="layout">
			<span class="layoutname">Align</span>
			<label for="">left</label>
			<input type="radio" name="align" id="dokstyle_textalign" value="left"></input>

			<label for="">center</label>
			<input type="radio" name="align" id="dokstyle_textalign" value="center"></input>

			<label for="">right</label>
			<input type="radio" name="align" id="dokstyle_textalign" value="right"></input>

			<label for="">justify</label>
			<input type="radio" name="align" id="dokstyle_textalign" value="justify"></input>
		</div>

		<div class="layout">
						<span class="layoutname">ShAdOWn</span>
			<label for="dokstyle_textshadowx">X</label><input type="number" id="dokstyle_textshadowx"/><br />
			<label for="dokstyle_textshadowy">Y</label><input type="number" id="dokstyle_textshadowy"/><br />
			<label for="dokstyle_textshadowsize">Y</label><input type="number" id="dokstyle_textshadowsize"/><br />
			
		</div>

		<div class="layout">
		<label></label><input/>
		</div>
	</div>
</div>

<div class="dokbox">
	<div class="dokbuttons">
		<a href="" class="">download</a>
		<button class="">close</button>
		<button class="">delete</button>
	</div>

	<div class="dokument" contenteditable="true">
		<%- dokument %>	
	</div>
</div>
<script src = "/js/jquery-2.1.1.min.js" ></script>
<script src="/socket.io/socket.io.js"></script>
<script src = "/js/rt.js" ></script>
</body>
</html>
